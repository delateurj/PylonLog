<Window x:Name="MainWindow1" x:Class="PylonLog.Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PylonLog.Core"
        mc:Ignorable="d"
        Title="Pylon Log" Height="350" Width="564.047" Loaded="MainWindow1_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="pylonLogEntryViewSource" d:DesignSource="{d:DesignInstance {x:Type local:PylonLogEntry}, CreateList=True}"/>
        <CollectionViewSource x:Key="pylonLogEntryDataBlocksViewSource" Source="{Binding DataBlocks, Source={StaticResource pylonLogEntryViewSource}}"/>
    </Window.Resources>
    <Grid HorizontalAlignment="Left" Height="313" Margin="7,2,0,0" VerticalAlignment="Top" Width="544">
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="313" VerticalAlignment="Top" Width="544">
            <TabItem Header="Quick Inspect" RenderTransformOrigin="0.5,0.507" Margin="-2,0,-18.667,0">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="logSessionsListBox" HorizontalAlignment="Left" Height="97" Margin="24,16,0,0" VerticalAlignment="Top" Width="188" SelectionChanged="logSessionsListBox_SelectionChanged"/>
                    <Button x:Name="openLogToInspectButton" Content="Open Spektrum File" HorizontalAlignment="Left" Height="25" Margin="24,118,0,0" VerticalAlignment="Top" Width="162" Click="openLogToInspectButton_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Create Log Entries" Margin="22.667,0,-18.333,0">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Review Log" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Margin="22.667,0,-42.333,0" Width="105">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
